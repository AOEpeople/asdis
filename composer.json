{
  "name": "aoe/asdis",
  "description": "Distributes on page assets onto multiple servers.",
  "type": "typo3-cms-extension",
  "authors": [
    {
      "name": "AOE GmbH",
      "email": "dev@aoe.com"
    }
  ],
  "support": {
    "email": "dev@aoe.com",
    "issues": "https://github.com/AOEpeople/asdis/issues",
    "source": "https://github.com/AOEpeople/asdis"
  },
  "require": {
    "php": "^7.2",
    "typo3/cms-core": "^8.7 || ^9.5 || ^10.4.14 || ^11.5",
    "typo3/cms-extbase": "^8.7 || ^9.5 || ^10.4.14 || ^11.5",
    "typo3/cms-backend": "^8.7 || ^9.5 || ^10.4.14 || ^11.5",
    "typo3/cms-reports": "^8.7 || ^9.5 || ^10.4.14 || ^11.5",
    "typo3/cms-frontend": "^8.7 || ^9.5 || ^10.4.14 || ^11.5"
  },
  "require-dev": {
    "nimut/testing-framework": "*",
    "phpunit/phpcov": "*",
    "squizlabs/php_codesniffer": "*",
    "sebastian/phpcpd": "*",
    "phpmd/phpmd": "*"
  },
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/AOEpeople/asdis.git"
    }
  ],
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "asdis",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "autoload": {
    "psr-4": {
        "Aoe\\Asdis\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aoe\\Asdis\\Tests\\": "Tests/"
    }
  },
  "scripts": {
    "test:unit": [
      "[ -e '.Build/bin/phpunit' ] || composer update",
      "TYPO3_PATH_ROOT=.Build/Web .Build/bin/phpunit --colors -c .Build/vendor/nimut/testing-framework/res/Configuration/UnitTests.xml Tests"
    ]
  }
}
